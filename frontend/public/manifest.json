{
  "short_name": "Instagram",
  "name": "Instagram Clone - Social Media Platform",
  "description": "A modern, full-featured social media platform with posts, stories, reels, and messaging",
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "/logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "/logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    }
  ],
  "start_url": "/",
  "display": "standalone",
  "theme_color": "#833AB4",
  "background_color": "#ffffff",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["social", "photo", "lifestyle"],
  "screenshots": [
    {
      "src": "/screenshots/feed.png",
      "type": "image/png",
      "sizes": "540x720",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/profile.png",
      "type": "image/png",
      "sizes": "540x720",
      "form_factor": "narrow"
    }
  ],
  "shortcuts": [
    {
      "name": "Home Feed",
      "short_name": "Feed",
      "description": "View your personalized feed",
      "url": "/",
      "icons": [
        {
          "src": "/icons/home-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Create Post",
      "short_name": "Create",
      "description": "Share a new post",
      "url": "/create",
      "icons": [
        {
          "src": "/icons/create-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "View your messages",
      "url": "/messages",
      "icons": [
        {
          "src": "/icons/messages-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "View your profile",
      "url": "/profile",
      "icons": [
        {
          "src": "/icons/profile-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/create",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "caption",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "prefer_related_applications": false
}